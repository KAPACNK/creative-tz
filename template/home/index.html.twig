{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <div>
                    <img height="300px" src="{{trailer.image}}" alt="{{trailer.image}}">
                    <h3><a href="/movie?id={{trailer.id}}">{{trailer.title}}</a></h3>
                </div>
                <br><br><br>
            {% endfor %}
        </table>
    </div>
{% endblock %}
